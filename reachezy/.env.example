# =============================================================================
# ReachEzy Environment Variables
# Copy this to .env and fill in your values
# =============================================================================

# --- AWS ---
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=            # Your 12-digit AWS account ID

# --- Meta / Instagram OAuth ---
FB_APP_ID=                 # From Meta Developer Portal → Your App → Settings → Basic
FB_APP_SECRET=             # From Meta Developer Portal → Your App → Settings → Basic

# --- Cognito (filled after CDK deploy) ---
COGNITO_USER_POOL_ID=      # From CDK output: Reachezy-Auth.UserPoolId
COGNITO_CLIENT_ID=         # From CDK output: Reachezy-Auth.UserPoolClientId
COGNITO_DOMAIN=            # reachezy-auth.auth.us-east-1.amazoncognito.com

# --- RDS (filled after CDK deploy) ---
DB_HOST=                   # From CDK output: Reachezy-Database.DbEndpoint
DB_NAME=reachezy
DB_SECRET_ARN=             # From CDK output: Reachezy-Database.DbSecretArn

# --- S3 Buckets (filled after CDK deploy) ---
VIDEOS_BUCKET=             # reachezy-videos-{ACCOUNT_ID}
FRAMES_BUCKET=             # reachezy-frames-{ACCOUNT_ID}
MEDIAKITS_BUCKET=          # reachezy-mediakits-{ACCOUNT_ID}

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_URL=       # API Gateway URL from CDK output
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_DOMAIN=

# --- Bedrock ---
BEDROCK_REGION=us-east-1
# Models used (no config needed, hardcoded in Lambdas):
#   anthropic.claude-3-5-sonnet-20241022-v2:0
#   amazon.titan-embed-text-v2:0
